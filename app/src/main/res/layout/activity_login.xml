<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorbackground"
    android:paddingBottom="@dimen/fab_margin"
    android:paddingLeft="@dimen/fab_margin"
    android:paddingRight="@dimen/fab_margin"
    android:paddingTop="@dimen/fab_margin"
    tools:context=".activity.LoginActivity">
    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <android.support.v7.widget.AppCompatImageView
            android:layout_width="@dimen/foto"
            android:layout_height="@dimen/button2"
            android:layout_marginTop="@dimen/padding"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/logo"/>
        <android.support.design.widget.TextInputLayout
            style="@style/edit_text_input_layout"
            android:layout_marginTop="@dimen/padding">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/email"
                style="@style/edit_text_login"
                android:hint="@string/hint_email"
                android:inputType="textAutoComplete|textEmailAddress|textWebEmailAddress"
                android:drawableLeft="@drawable/ic_email_black_24dp"
                android:contentDescription="@string/content_description_email"/>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            style="@style/edit_text_input_layout"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/colorPrimary"
            android:layout_marginTop="@dimen/fab_margin"
            android:layout_marginBottom="@dimen/layout_margin_top">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/senha"
                style="@style/edit_text_login"
                android:hint="@string/hint_senha"
                android:inputType="textPassword"
                android:drawableStart="@drawable/ic_lock_open_black_24dp"
                android:drawableLeft="@drawable/ic_lock_open_black_24dp"
                android:contentDescription="@string/content_description_senha"/>
        </android.support.design.widget.TextInputLayout>
        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center">
            <android.support.v7.widget.CardView
                android:id="@+id/btnLogin"
                android:layout_width="@dimen/card_width"
                android:layout_height="@dimen/card_height"
                app:cardBackgroundColor="@color/colorButton"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="@dimen/dois"
                app:cardElevation="@dimen/layout_margin"
                app:cardUseCompatPadding="true"
                android:clickable="true"
                android:focusable="true">
                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:contentDescription="@string/content_description_button_login">
                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/button_login"
                        android:textSize="@dimen/text_size"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:textColor="@color/colorPrimary"
                        android:gravity="center"/>
                </android.support.v7.widget.LinearLayoutCompat>
            </android.support.v7.widget.CardView>
            <android.support.v4.widget.ContentLoadingProgressBar
                android:id="@+id/progress_bar_login"
                style="?android:attr/progressBarStyle"
                android:layout_width="@dimen/layout_height"
                android:layout_height="@dimen/layout_height"
                android:layout_gravity="center" />
        </android.support.v7.widget.LinearLayoutCompat>
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/btnRecuperarSenha"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_margin_top"
            android:gravity="center"
            android:text="@string/text_button_recuperar_senha"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_principal"
            android:contentDescription="@string/content_description_text_button_recuperar_senha"/>
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/btnCadastro"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_margin_top"
            android:gravity="center"
            android:text="@string/text_button_cadastro"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size"
            android:textStyle="bold"
            android:contentDescription="@string/content_description_text_button_cadastro"/>
    </android.support.v7.widget.LinearLayoutCompat>
</android.support.v4.widget.NestedScrollView>