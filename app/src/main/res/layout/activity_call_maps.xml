<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorbackground"
    android:paddingBottom="@dimen/fab_margin"
    android:paddingLeft="@dimen/fab_margin"
    android:paddingRight="@dimen/fab_margin"
    android:paddingTop="@dimen/fab_margin"
    tools:context=".activity.CallMapsActivity">
    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding"
            android:contentDescription="@string/content_description_titulo_gps"
            android:gravity="center"
            android:text="@string/titulo_gps"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/titulo_size"
            android:textStyle="bold" />
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/nomeReserva"
            style="@style/edit_text_cadastro"
            android:layout_marginTop="@dimen/layout_margin_top"/>
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/enderecoReserva"
            style="@style/edit_text_cadastro"
            android:layout_marginTop="@dimen/layout_margin_top"/>
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/valorReserva"
            style="@style/edit_text_cadastro"
            android:layout_marginTop="@dimen/layout_margin_top"/>
        <android.support.v7.widget.CardView
            android:id="@+id/btnReserva"
            android:layout_width="@dimen/card_width"
            android:layout_height="@dimen/card_height"
            android:layout_marginTop="@dimen/layout_margin_top"
            android:foreground="?attr/selectableItemBackground"
            app:cardCornerRadius="@dimen/dois"
            app:cardElevation="@dimen/layout_margin"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="@color/colorButton"
            android:clickable="true"
            android:focusable="true">
            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:contentDescription="@string/content_description_button_map">
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/vamos_la"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"/>
            </android.support.v7.widget.LinearLayoutCompat>
        </android.support.v7.widget.CardView>
    </android.support.v7.widget.LinearLayoutCompat>
</android.support.v4.widget.NestedScrollView>